<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-10 col-sm-12">
      <h2 class="dm-title"><%= @room.user.name %>さんとのDM</h2>
      <%= form_with model: @message, url: company_room_messages_path(@room), method: :post, data: {remote: true} do |f| %>
        <div class="input-group">
          <%= f.text_area :body, class: 'form-control' %>
          <div class="input-group-append">
            <%= f.submit '送信', class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3 mb-3 mt-5">
      <div id="company_messages_<% @message.id %>">
        <%= render 'company/messages/message', message: @message %>
      </div>
    </div>
    </div>
  </div>



<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <%= form_with model: @post, url: @post do |f| %>

        <div class="field">
          <%= f.label "画像" %><br/>
          <%= f.file_field :post_image %>
        </div>

        <div class="field">
          <%= f.label "投稿内容" %><br/>
          <%= f.text_area :detail %>
        </div>

        <div class="actions">
          <%= f.submit "投稿" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

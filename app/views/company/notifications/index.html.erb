<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
            <h3 class="text-center">通知</h3>
            <%= link_to company_destroy_all_notifications_path, method: :delete, class: "btn btn-danger" do %>
                <i class="fas fa-trash" style="color: black;"></i>
                <h7 style="color: black;">全削除</h7>
            <% end %>

            <% if @notifications.exists? %>
              <table class="table mt-3">
                <% @notifications.each do |notification| %>
                  <tr>
                    <th>
                      <div class="company-index">
                          <%= render "notification", notification: notification %>
                      </div>
                    </th>
                  </tr>
                <% end %>
              </table>
            <% else %>
                <p class="text-white text-center mt-5">通知はありません</p>
            <% end %>
        </div>
    </div>
</div>

<!--都道府県検索フォーム-->
<%= form_with url: prefecture_search_path, method: :get do |f| %>
  <div class="f-group mr-3">
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "---都道府県で検索---", class: "form" %>
    <div class="f-group-append">
      <%= f.button :type => "submit" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>

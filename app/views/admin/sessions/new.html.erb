
<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="sign-in-title">管理者ログイン</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 border border-dark rounded bg-light mb-5 pb-3">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="sign-in-field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="sign-in-field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="sign-in-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn--yellow btn--cubic btn--shadow" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

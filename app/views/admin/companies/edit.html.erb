<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="edit-title">会社情報編集フォーム</h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 border bg-light px-0 mt-4 mb-4">
      <%= form_with model: @company, url: admin_company_path do |f| %>
        <div class="field">
          <%= f.label "画像" %><br />
          <%= f.file_field :company_image, class: "form" %>
        </div>
        <div class="field">
          <%= f.label "会社名" %><br />
          <%= f.text_field :name, class: "form" %>
        </div>
        <div class="field">
          <%= f.label "会社説明" %><br />
          <%= f.text_area :detail, class: "form" %>
        </div>
        <div class="field">
          <%= f.label "職種" %><br />
          <%= f.collection_select :occupation_genre_id, OccupationGenre.all, :id, :name, include_blank: "--選択してください--", class: "form" %>
        </div>
        <div class="field">
          <%= f.label "勤務地" %><br />
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "--都道府県--", class: "form" %>
          <%= f.text_field :city, placeholder: "○○市", class: "form" %>
        </div>
        <div class="field">
          <%= f.label "雇用形態" %><br />
          <%= f.radio_button :employment_status, :true, checked: true %>
          <%= f.label :employment_status, "正社員" %><br>
          <%= f.radio_button :employment_status, :false %>
          <%= f.label :employment_status, "アルバイト/パート" %>
        </div>
        <div class="field">
          <%= f.label "登録ステータス" %><br />
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会済み" %><br>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "登録中" %>
        </div>
        <div class="text-center">
          <%= f.button :type => "submit", class: " btn btn-success edit-btn" do %>
            <i class="fas fa-check"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

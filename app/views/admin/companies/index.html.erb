<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="index-title">企業一覧</h4>
    </div>
  </div>
  <% @companies.each do |company| %>
    <div class="row justify-content-center">
      <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 post-shadow border bg-light rounded px-0 mb-5">
        <%= link_to admin_company_path(company.id) do %>
          <table class="table">
            <tbody>
              <tr>
                <th>会社名</th>
                <th><%= company.name %></th>
              </tr>
              <tr>
                <th>職業ジャンル</th>
                <th><%= company.occupation_genre.name %></th>
              </tr>
              <tr>
                <th>会社所在地</th>
                <th><%= company.prefecture.name %><%= company.city %></th>
              </tr>
              <tr>
                <th>雇用形態</th>
                <th>
                  <%if company.employment_status == true %>
                    正社員
                  <% else %>
                    アルバイト/パート
                  <% end %>
                </th>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <th>
                  <% if company.is_deleted? %>
                    <p class="text-danger">退会済み</p>
                  <% else %>
                    <p class="text-success">登録中</p>
                  <% end %>
                </th>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

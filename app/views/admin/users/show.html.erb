<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3 border border-company bg-light px-0 mb-5">
      <%= image_tag @user.get_user_image, size:"200x150", style: "width: 100%; height: auto;" %>
      <table class="table ">
        <tbody>
          <tr>
            <th>名前</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.detail %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @user.prefecture.name %><%= @user.city %></th>
          </tr>
          <tr>
          <th>会員ステータス</th>
          <th>
            <% if @user.is_deleted? %>
              退会済み
            <% else %>
               登録中
            <% end %>
          </th>
        </tr>
        </tbody>
      </table>
      <div class="text-right pb-3 pr-3">
        <%= link_to edit_admin_user_path do %>
          <i class="fas fa-pencil btn btn--orange btn--cubic btn--shadow"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

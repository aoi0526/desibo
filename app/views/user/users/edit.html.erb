<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="edit-title">ユーザー情報編集フォーム</h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12 border bg-light px-0">
      <%= form_with model: @user, url: user_user_path do |f| %>
        <table class="table border-bottom">
          <tbody>
            <tr>
              <th>画像</th>
              <th><%= f.file_field :user_image %></th>
            </tr>
            <tr>
              <th>名前</th>
              <th><%= f.text_field :name %></th>
            </tr>
            <tr>
              <th>自己紹介</th>
              <th><%= f.text_area :detail %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th>
                <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "--都道府県--" %>
                <%= f.text_field :city, placeholder: "○○市" %>
              </th>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.button :type => "submit", class: " btn btn-success user-edit-btn" do %>
            <i class="fas fa-check"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


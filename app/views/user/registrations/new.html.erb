<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="form-title">ユーザー新規登録</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xl-4 col-lg-4 col-md-8 col-sm-10 border border-dark rounded bg-light mb-5 pb-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "名前" %><br />
          <%= f.text_field :name, class: "form" %>
        </div>

        <div class="field">
          <%= f.label "住所" %><br />
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "--選択してください--", class: "form" %>
          <%= f.text_field :city, placeholder: "例: ○○市", class: "form" %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="field">
          <%= f.label "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="text-center mt-4">
          <%= f.submit "新規登録", class: "btn btn--orange btn--cubic btn--shadow" %>
        </div>
      <% end %>

      <%= render "user/shared/links" %>

    </div>
  </div>
</div>

<h2>Sign up</h2>


